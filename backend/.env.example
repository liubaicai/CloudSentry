# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/cloudsentry?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:5173"

# Syslog Server
# Set to "false" when using an external syslog collector (e.g., the Go-based collector)
# When enabled (default), the backend starts its own TCP/UDP syslog server on port 514
SYSLOG_SERVER_ENABLED="true"
