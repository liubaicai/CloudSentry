// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model SecurityEvent {
  id          String   @id @default(uuid())
  timestamp   DateTime @default(now())
  severity    String   // critical, high, medium, low, info
  category    String   // malware, intrusion, policy_violation, etc.
  source      String   // source IP or hostname
  destination String?  // destination IP or hostname
  message     String   @db.Text
  rawLog      String   @db.Text
  protocol    String?
  port        Int?
  status      String   @default("new") // new, investigating, resolved, false_positive
  assignedTo  String?
  tags        String[] @default([])
  metadata    Json?    // Additional structured data
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([timestamp])
  @@index([severity])
  @@index([category])
  @@index([status])
  @@map("security_events")
}

model AlertForwardingRule {
  id          String   @id @default(uuid())
  name        String
  description String?
  enabled     Boolean  @default(true)
  conditions  Json     // Filter conditions
  destination String   // webhook URL or email
  type        String   // webhook, email, syslog
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("alert_forwarding_rules")
}

model SystemSettings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}
