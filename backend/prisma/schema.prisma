// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model SecurityEvent {
  id             String   @id @default(uuid())
  timestamp      DateTime @default(now())
  
  // Enhanced threat fields
  threatName     String?  // Name of the threat/alert
  threatLevel    String?  // Threat level (critical, high, medium, low, info) - alias for severity
  severity       String   // critical, high, medium, low, info
  category       String   // malware, intrusion, policy_violation, etc.
  
  // Network information
  sourceIp       String   // Source IP address
  destinationIp  String?  // Destination IP address
  sourcePort     Int?     // Source port
  destinationPort Int?    // Destination port (alias for port)
  protocol       String?  // Network protocol
  
  // Legacy fields (kept for backward compatibility)
  source         String   // source IP or hostname (alias for sourceIp)
  destination    String?  // destination IP or hostname (alias for destinationIp)
  port           Int?     // destination port (kept for backward compatibility)
  
  // Content
  message        String   @db.Text
  rawData        String   @db.Text // Raw original data (alias for rawLog)
  rawLog         String   @db.Text // Legacy field
  
  // Management
  status         String   @default("new") // new, investigating, resolved, false_positive
  assignedTo     String?
  tags           String[] @default([])
  metadata       Json?    // Additional structured data
  
  // Source tracking
  sourceChannel  String?  // Source channel name/identifier
  channelId      String?  // Link to syslog channel
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  channel        SyslogChannel? @relation(fields: [channelId], references: [id], onDelete: SetNull)

  @@index([timestamp])
  @@index([severity])
  @@index([threatLevel])
  @@index([category])
  @@index([status])
  @@index([channelId])
  @@index([sourceIp])
  @@index([destinationIp])
  @@map("security_events")
}

model AlertForwardingRule {
  id          String   @id @default(uuid())
  name        String
  description String?
  enabled     Boolean  @default(true)
  conditions  Json     // Filter conditions
  destination String   // webhook URL or email
  type        String   // webhook, email, syslog
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("alert_forwarding_rules")
}

model SystemSettings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

model NetworkConfig {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  interface   String?  // Network interface name
  ipAddress   String?
  netmask     String?
  gateway     String?
  dnsServers  String[] @default([])
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("network_config")
}

model OperationsConfig {
  id            String   @id @default(uuid())
  category      String   // e.g., "retention", "backup", "maintenance"
  key           String
  value         Json
  description   String?
  enabled       Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([category, key])
  @@map("operations_config")
}

model SecurityConfig {
  id          String   @id @default(uuid())
  category    String   // e.g., "authentication", "encryption", "access_control"
  key         String
  value       Json
  description String?
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([category, key])
  @@map("security_config")
}

model SyslogChannel {
  id              String   @id @default(uuid())
  name            String   // User-editable channel name
  sourceIdentifier String  @unique // IP address or hostname that uniquely identifies the sender
  description     String?
  enabled         Boolean  @default(true)
  eventCount      Int      @default(0) // Total events received from this channel
  lastEventAt     DateTime? // Last time an event was received
  metadata        Json?    // Additional channel information
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  fieldMappings   FieldMapping[]
  securityEvents  SecurityEvent[]

  @@index([sourceIdentifier])
  @@map("syslog_channels")
}

model FieldMapping {
  id              String   @id @default(uuid())
  channelId       String?  // If null, applies to all channels as default
  sourceField     String   // Field name in incoming syslog
  targetField     String   // Field name in SecurityEvent table
  transformType   String   @default("direct") // direct, regex, lookup, script
  transformConfig Json?    // Configuration for transformation (regex pattern, lookup table, etc.)
  enabled         Boolean  @default(true)
  priority        Int      @default(0) // Higher priority mappings are applied first
  description     String?
  aiGenerated     Boolean  @default(false) // Whether this mapping was AI-generated
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  channel         SyslogChannel? @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([channelId])
  @@map("field_mappings")
}

model OpenAIConfig {
  id          String   @id @default(uuid())
  baseUrl     String   @default("https://api.openai.com/v1") // OpenAI compatible API base URL
  apiKey      String   // API key for authentication
  model       String   @default("gpt-3.5-turbo") // Model to use for generation
  enabled     Boolean  @default(true)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("openai_config")
}

model AIGeneratedMapping {
  id                String   @id @default(uuid())
  channelPattern    String   // Pattern that identifies the channel (e.g., source identifier pattern)
  sampleData        Json     // Sample data used to generate the mapping
  generatedMappings Json     // The AI-generated field mappings
  tested            Boolean  @default(false) // Whether this mapping has been tested
  successCount      Int      @default(0) // Number of times this mapping was successfully applied
  failureCount      Int      @default(0) // Number of times this mapping failed
  lastUsedAt        DateTime? // Last time this mapping was used
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([channelPattern])
  @@map("ai_generated_mappings")
}
